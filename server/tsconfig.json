{
  "compilerOptions": {
    "module": "commonjs",
    "pretty": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "target": "ESNext",
    "outDir": "./dist",
    "incremental": true,
    "allowJs": true,
    "resolveJsonModule": true,
    "baseUrl": "./src/"
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules"]
}
